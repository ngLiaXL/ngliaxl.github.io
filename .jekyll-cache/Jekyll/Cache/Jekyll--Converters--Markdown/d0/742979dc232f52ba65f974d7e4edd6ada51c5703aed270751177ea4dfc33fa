<div class="language-plaintext highlighter-rouge"><div class="highlight"><pre class="highlight"><code> public static boolean isSoftShowing(Activity activity) {
        //è·å–å½“å‰å±å¹•å†…å®¹çš„é«˜åº¦
        int screenHeight = activity.getWindow().getDecorView().getHeight();
        //è·å–Viewå¯è§åŒºåŸŸçš„bottom
        Rect rect = new Rect();
        activity.getWindow().getDecorView().getWindowVisibleDisplayFrame(rect);

        return screenHeight - rect.bottom - getNavigationBarHeightIfRoom(activity) != 0;
    }

    /**
     * è·å–è™šæ‹ŸæŒ‰é”®çš„é«˜åº¦
     * 1. å…¨é¢å±ä¸‹
     * 1.1 å¼€å¯å…¨é¢å±å¼€å…³-è¿”å›0
     * 1.2 å…³é—­å…¨é¢å±å¼€å…³-æ‰§è¡Œéå…¨é¢å±ä¸‹å¤„ç†æ–¹å¼
     * 2. éå…¨é¢å±ä¸‹
     * 2.1 æ²¡æœ‰è™šæ‹Ÿé”®-è¿”å›0
     * 2.1 è™šæ‹Ÿé”®éšè—-è¿”å›0
     * 2.2 è™šæ‹Ÿé”®å­˜åœ¨ä¸”æœªéšè—-è¿”å›è™šæ‹Ÿé”®å®é™…é«˜åº¦
     */
    public static int getNavigationBarHeightIfRoom(Context context) {
        if (navigationGestureEnabled(context)) {
            return 0;
        }
        return getCurrentNavigationBarHeight(((Activity) context));
    }

    /**
     * å…¨é¢å±ï¼ˆæ˜¯å¦å¼€å¯å…¨é¢å±å¼€å…³ 0 å…³é—­  1 å¼€å¯ï¼‰
     *
     * @param context
     * @return
     */
    public static boolean navigationGestureEnabled(Context context) {
        int val = Settings.Global.getInt(context.getContentResolver(), getDeviceInfo(), 0);
        return val != 0;
    }

    /**
     * è·å–è®¾å¤‡ä¿¡æ¯ï¼ˆç›®å‰æ”¯æŒå‡ å¤§ä¸»æµçš„å…¨é¢å±æ‰‹æœºï¼Œäº²æµ‹åä¸ºã€å°ç±³ã€oppoã€é­…æ—ã€vivoéƒ½å¯ä»¥ï¼‰
     *
     * @return
     */
    public static String getDeviceInfo() {
        String brand = Build.BRAND;
        if (TextUtils.isEmpty(brand)) return "navigationbar_is_min";

        if (brand.equalsIgnoreCase("HUAWEI")) {
            return "navigationbar_is_min";
        } else if (brand.equalsIgnoreCase("XIAOMI")) {
            return "force_fsg_nav_bar";
        } else if (brand.equalsIgnoreCase("VIVO")) {
            return "navigation_gesture_on";
        } else if (brand.equalsIgnoreCase("OPPO")) {
            return "navigation_gesture_on";
        } else {
            return "navigationbar_is_min";
        }
    }

    /**
     * éå…¨é¢å±ä¸‹ è™šæ‹Ÿé”®å®é™…é«˜åº¦(éšè—åé«˜åº¦ä¸º0)
     *
     * @param activity
     * @return
     */
    public static int getCurrentNavigationBarHeight(Activity activity) {
        if (isNavigationBarShown(activity)) {
            return getNavigationBarHeight(activity);
        } else {
            return 0;
        }
    }

    /**
     * éå…¨é¢å±ä¸‹ è™šæ‹ŸæŒ‰é”®æ˜¯å¦æ‰“å¼€
     *
     * @param activity
     * @return
     */
    public static boolean isNavigationBarShown(Activity activity) {
        //è™šæ‹Ÿé”®çš„view,ä¸ºç©ºæˆ–è€…ä¸å¯è§æ—¶æ˜¯éšè—çŠ¶æ€
        View view = activity.findViewById(android.R.id.navigationBarBackground);
        if (view == null) {
            return false;
        }
        int visible = view.getVisibility();
        if (visible == View.GONE || visible == View.INVISIBLE) {
            return false;
        } else {
            return true;
        }
    }

    /**
     * éå…¨é¢å±ä¸‹ è™šæ‹Ÿé”®é«˜åº¦(æ— è®ºæ˜¯å¦éšè—)
     *
     * @param context
     * @return
     */
    public static int getNavigationBarHeight(Context context) {
        int result = 0;
        int resourceId = context.getResources().getIdentifier("navigation_bar_height", "dimen", "android");
        if (resourceId &gt; 0) {
            result = context.getResources().getDimensionPixelSize(resourceId);
        }
        return result;
    }
